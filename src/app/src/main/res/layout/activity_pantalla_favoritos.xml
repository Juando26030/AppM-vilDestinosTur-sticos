<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logica.MainActivity">

    <TextView
        android:id="@+id/txtViewExplorar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pantalla explorar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoPrueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewExplorar"
        android:text="Su categorÃ­a seleccionada fue "
        app:layout_constraintBottom_toTopOf="@+id/textoCategoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewExplorar"
        app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/textoCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewExplorar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/textoPrueba"
        android:text="categoria"
        app:layout_constraintBottom_toTopOf="@+id/webView"
        tools:layout_editor_absoluteX="176dp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="411dp"
        android:layout_height="380dp"
        android:layout_below="@+id/textoCategoria"
        android:layout_marginBottom="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="412dp"
        android:layout_height="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webView" />

</androidx.constraintlayout.widget.ConstraintLayout>